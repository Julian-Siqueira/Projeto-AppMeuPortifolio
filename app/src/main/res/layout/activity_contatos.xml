<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Contatos">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/actionbar_contato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_green"
        app:navigationIcon="@drawable/ic_back"
        app:titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="@string/title_contatos"/>

    <ImageView
        android:id="@+id/img_phone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_phone"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actionbar_contato"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_number"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/img_phone"
        app:layout_constraintTop_toTopOf="@id/img_phone"
        android:textSize="20sp"
        android:layout_margin="10dp"/>

    <ImageView
    android:id="@+id/img_email"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/ic_email"
    android:layout_margin="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/img_phone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contato_email"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/img_email"
        app:layout_constraintTop_toTopOf="@id/img_email"
        android:textSize="20sp"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/img_wpp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo_whatsapp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>