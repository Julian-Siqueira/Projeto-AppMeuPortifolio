<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Projetos">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/actionbar_projeto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:navigationIcon="@drawable/ic_back"
        app:titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="@string/title_meus_projetos"/>

    <ImageView
        android:id="@+id/barbearia"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/projeto_barbearia"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/txtTituloBarbearia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/projeto_barbearia"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/barbearia"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/barbearia"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/orange"
        android:text="@string/detalhes_do_projeto"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintStart_toEndOf="@id/barbearia"
        app:layout_constraintTop_toBottomOf="@id/txtTituloBarbearia" />

    <ImageView
        android:id="@+id/pizzaria"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/projeto_pizzaria"
        app:layout_constraintTop_toBottomOf="@id/barbearia"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/txtTituloPizzaria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/projeto_pizzaria"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/pizzaria"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/pizzaria"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detalhes_do_projeto"
        app:layout_constraintStart_toEndOf="@id/pizzaria"
        app:layout_constraintTop_toBottomOf="@id/txtTituloPizzaria"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:cornerRadius="50dp"
        android:backgroundTint="@color/orange"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/marcenaria"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/projeto_marcenaria"
        app:layout_constraintTop_toBottomOf="@id/pizzaria"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/txtTituloMarcenaria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/projeto_marcenaria"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/marcenaria"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/marcenaria"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detalhes_do_projeto"
        app:layout_constraintStart_toEndOf="@id/marcenaria"
        app:layout_constraintTop_toBottomOf="@id/txtTituloMarcenaria"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/orange"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>